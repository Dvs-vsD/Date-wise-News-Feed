<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AzovaTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="st_tv_extra_small">
        <item name="android:textColor">@color/clr_tv_black</item>
        <item name="android:textSize">@dimen/tv_s_8</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="st_tv_small">
        <item name="android:textColor">@color/clr_tv_black</item>
        <item name="android:textSize">@dimen/tv_s_12</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="st_tv_normal">
        <item name="android:textColor">@color/clr_tv_black</item>
        <item name="android:textSize">@dimen/tv_s_16</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="st_tv_normal.bold">
        <item name="android:textColor">@color/clr_tv_black</item>
        <item name="android:textSize">@dimen/tv_s_16</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="st_tv_normal.light">
        <item name="android:textColor">@color/clr_tv_black</item>
        <item name="android:textSize">@dimen/tv_s_16</item>
        <item name="fontFamily">@font/nunito_light</item>
    </style>


    <style name="st_tv_normal.light_gray">
        <item name="android:textColor">@color/clr_tv_light_gray</item>
        <item name="android:textSize">@dimen/tv_s_16</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="st_tv_small.light_gray">
        <item name="android:textColor">@color/clr_tv_light_gray</item>
        <item name="android:textSize">@dimen/tv_s_12</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="st_tv_extra_small.light_gray">
        <item name="android:textColor">@color/clr_tv_extra_light_gray</item>
        <item name="android:textSize">@dimen/tv_s_8</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="st_btn_style">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/tv_s_16</item>
        <item name="background">@color/pink</item>
        <item name="cornerRadius">@dimen/_24sdp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="st_et_style">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
    </style>

</resources>